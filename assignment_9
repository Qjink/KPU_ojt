CREATE OR REPLACE PROCEDURE SALES_CLOSNG
(V_CLOSING_DATE IN CHAR(8))
IS
BEGIN
 V_SALES_TOT_AMT NUMBERS;
 SELECT SUM(SALES_AMT)
  INTO V_SALES_TOT_AMT
 FROM SALES_LIST_T
 WHERE SALES_DATE = V_CLOSING_DATE;

EXCEPTION
  WHEN NO_DATA_FOUND THEN
    SET V_SALES_TOT_AMT = 0;

INSERTã€€INTO
SALES_CLOSED_T
(SALES_DATE, SALES_TOT_AMT)
VALUES(V_CLOSING_DATE, V_DALES_TOT_AMT);

EXCEPTION
 WHEN NO_DATA_FOUND THEN
  SET SALES_TOT_AMT = 0;

COMMIT;
END;
